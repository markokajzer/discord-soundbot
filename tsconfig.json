{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2022",
    "outDir": "dist",
    "incremental": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },

    "strict": true
  },
  "include": ["src/**/*", "bin/**/*", "types"],

  "exclude": ["**/__test__", "**/__mocks__"]
}
