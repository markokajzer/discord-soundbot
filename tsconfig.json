{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es6",
    "strict": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "lib": [
      "es2017"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],

    "paths": {
      "~/*": ["./src/*"]
    },
    "incremental": true
  },
  "include": [
    "src/**/*",
    "bin/**/*"
  ],

  "exclude": [
    "**/__test__",
    "**/__mocks__"
  ]
}
