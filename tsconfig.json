{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "strict": true,
    "outDir": "dist",
    "lib": [
      "es2017"
    ],

    "baseUrl": ".",
    "paths": {
      "@config/*": ["config/*"],
      "@util/*": ["src/util/*"]
    }
  },
  "include": [
    "src/**/*",
    "lib/**/*",
    "types/*"
  ]
}
